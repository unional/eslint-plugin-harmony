{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "lib": [
      "es2015"
    ],
    "moduleResolution": "node",
    "newLine": "LF",
    "noUnusedParameters": false,
    "removeComments": false,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true
  },
  "include": [
    "src",
    "src/style-parts/*.json",
    "typings"
  ]
}
